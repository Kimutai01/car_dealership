<div>
  <h2><%= @title %></h2>

  <.form
    let={f}
    for={@changeset}
    id="model-form"
    phx-target={@myself}
    phx-change="validate"
    phx-submit="save"
  >
    <%= label(f, :name) %>
    <%= text_input(f, :name) %>
    <%= error_tag(f, :name) %>
    <%= hidden_input(f, :category_id, value: @category.id) %>

    <div>
      <%= submit("Save", phx_disable_with: "Saving...") %>
    </div>
  </.form>
</div>
